@using webUygulamasi.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "StaffView";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Personel Bilgilerini Görüntüleme Sayfası</h2>
<br />


<table class="table table-bordered">
    <tr>

      
        <th>PERSONEL ADI</th>
        <th>PERSONEL SOYADI</th>

        <th>PERSONEL BİLGİLERİ SİL</th>
        <th>PERSONEL BİLGİLERİNİ GÜNCELLE</th>
        <th>PERSONEL DETAYLARI İNCELE</th>

    </tr>

    @foreach (var c in Model)
    {

        <tr>
            
            <td>
                @c.PersonelAD

            </td>
            <td>
                @c.PersonelSOYAD
            </td>





            <td> <a href="/Personel/RemovePersonel/@c.PersonelID" class="btn btn-danger">Sil </a></td>
            <td> <a href="/Personel/UpdataPersonel/@c.PersonelID" class="btn btn-warning">Güncelle </a></td>
            <td> <a href="/Personel/StaffDetail/@c.PersonelID" class="btn btn-default" style="background-color:lightcoral;color:white;"> Detaylar </a></td>
        </tr>
    }
</table>

<a href="/Personel/AddStaff" class="btn btn-info">Yeni Personel Ekle</a>


