@model webUygulamasi.Models.Siniflar.AracKategori
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />

<h2> Yeni Kategori Ekleme Sayfası</h2>
<br />


<form class="form-group" method="post">
    @Html.LabelFor(x => x.AracAD, "Aracın Adını Giriniz")
    @Html.TextBoxFor(x => x.AracAD, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.AracMARKA, "Aracın Markasını  Giriniz")
    @Html.TextBoxFor(x => x.AracMARKA, new { @class = "form-control" })

    @Html.LabelFor(x => x.AracPLAKA, "Aracın Plakasını Giriniz")
    @Html.TextBoxFor(x => x.AracPLAKA, new { @class = "form-control" })

    @Html.LabelFor(x => x.AracTESLİMTARİHİ, "Aracın Teslim Tarihini Giriniz")
    @Html.TextBoxFor(x => x.AracTESLİMTARİHİ, new { @class = "form-control" })

    @Html.LabelFor(x => x.AracYİKAMAUCRET, "Aracın Yıkama Ücretini Giriniz")
    @Html.TextBoxFor(x => x.AracYİKAMAUCRET, new { @class = "form-control" })


    <br />

    <br />

    <br />

    <br />


    <br />


    <button class="btn btn-info" id="Btn1">Bilgileri Kaydet </button>
    <script>
        $('#Btn1').click(function () {
            alert("Müşteri Aracı Başarıyla Eklenmiştir")
        });


    </script>
</form>

