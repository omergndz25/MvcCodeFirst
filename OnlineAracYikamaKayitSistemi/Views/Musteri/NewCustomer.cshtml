@model webUygulamasi.Models.Siniflar.Musteri
@{
    ViewBag.Title = "NewCustomer";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<br />

<h2> Yeni Müşteri Ekleme Sayfası</h2>
<br />


<form class="form-group" method="post">
    @Html.LabelFor(x => x.MusteriAD, "Müşterinin Adını Giriniz")
    @Html.TextBoxFor(x => x.MusteriAD, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.MusteriSOYAD, " Müşterinin Soyadını  Giriniz")
    @Html.TextBoxFor(x => x.MusteriSOYAD, new { @class = "form-control" })

    @Html.LabelFor(x => x.MusteriTELEFON, "Müşterinin İletişim Numarasını Giriniz")
    @Html.TextBoxFor(x => x.MusteriTELEFON, new { @class = "form-control" })

    @Html.LabelFor(x => x.MusteriMAİL, "Müşterinin Mail Bilgisini  Giriniz")
    @Html.TextBoxFor(x => x.MusteriMAİL, new { @class = "form-control" })

    @Html.LabelFor(x => x.MusteriARACTESLİMTARİHİ, "Müşterinin Araç Teslim Tarihini Giriniz")
    @Html.TextBoxFor(x => x.MusteriARACTESLİMTARİHİ, new { @class = "form-control" })


    <br />

    <br />

    <br />

    <br />


    <br />


    <button class="btn btn-info" id="Btn1">Yeni Müşteri Bilgisi Ekleme </button>

    <script>
        $('#Btn1').click(function () {
            alert("Müşteri Aracı Başarıyla Eklenmiştir")
        });


    </script>

</form>


